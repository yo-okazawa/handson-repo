compatibility: whitetank
aisexec {
  user: root
  group: root
}

service {
  name: pacemaker
  ver: 0
}

totem {
  version: 2
  secauth: off
  threads: 0
  rrp_mode: none
  clear_node_high_bit: yes
  token: 4000
  consensus: 10000
  rrp_problem_count_timeout: 3000
  member {
    memberaddr: <%= node["pgsql_cluster"]["primary"]["ip"] %>
  }
  member {
    memberaddr: <%= node["pgsql_cluster"]["secondary"]["ip"] %>
  }
  interface {
    ringnumber: 0
    bindnetaddr: <%= node["pgsql_cluster"]["subnetaddr"] %>
    mcastaddr: 226.94.1.1
    mcastport: 5405
  }
}

logging {
  fileline: on
  to_syslog: yes
  syslog_facility: local1
  syslog_priority: info
  debug: off
  timestamp: on
}