#!/bin/bash
date
rsync \
--verbose \
--recursive \
--links \
--times \
--perms \
--devices \
--sparse \
--hard-links \
--human-readable \
--progress \
--delete \
--include='RPM-GPG-KEY-CentOS-[5-6]' \
--include='[5-6]*' \
--include='[5-6]*/addons**' \
--include='[5-6]*/centosplus**' \
--include='[5-6]*/contrib**' \
--include='[5-6]*/cr**' \
--include='[5-6]*/extras**' \
--include='[5-6]*/fasttraqck**' \
--include='[5-6]*/updates**' \
--include='[5-6]*/os**' \
--exclude='*' \
<%= node["repo-server"]["centos"]["source"] %> \
<%= node["repo-server"]["centos"]["dastination"] %>
if [ $? -ne 0 ]
then
  echo "`date` ERROR:centos-mirror-fail"
else
  echo ""
fi
