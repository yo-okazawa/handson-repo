#!/bin/bash

msi_URL="<%= node["repo-server"]["mackerel-msi"]["source"] %>/<%= node["repo-server"]["mackerel-msi"]["package"] %>"
mackerel_directory="<%= node["repo-server"]["mackerel-msi"]["dastination"] %>"


echo -e "`date` get-mackerel-package-msi start\n"

cd ${mackerel_directory}

curl -O ${msi_URL}

if [ $? -ne 0 ]
then
  echo -e "\e[31m[NG]\e[m get-mackerel-package-msi fail\n"
else
  echo -e "\e[32m[OK]\e[m get-mackerel-package-msi success\n"
fi

echo -e "`date` get-mackerel-package-msi finished\n"
