#!/bin/bash

rpm_URL="<%= node["repo-server"]["mackerel-rpm"]["source"] %>/<%= node["repo-server"]["mackerel-rpm"]["package"] %>"
mackerel_directory="<%= node["repo-server"]["mackerel-rpm"]["dastination"] %>"


echo -e "`date` get-mackerel-package-rpm start\n"

cd ${mackerel_directory}

curl -O ${rpm_URL}

if [ $? -ne 0 ]
then
  echo -e "\e[31m[NG]\e[m get-mackerel-package-rpm fail\n"
else
  echo -e "\e[32m[OK]\e[m get-mackerel-package-rpm success\n"
fi

echo -e "`date` get-mackerel-package-rpm finished\n"
