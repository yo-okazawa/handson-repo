#!/bin/bash

rpm_URL="<%= node["repo-server"]["mackerel-rpm"]["source"] %>/<%= node["repo-server"]["mackerel-rpm"]["package"] %>"
mackerel_directory="<%= node["repo-server"]["mackerel-rpm"]["dastination"] %>"


echo -e "`date` wget-mackerel-package start\n"

wget -N -P ${mackerel_directory} ${rpm_URL}
if [ $? -ne 0 ]
then
  echo -e "\e[31m[NG]\e[m wget-mackerel-package fail\n"
else
  echo -e "\e[32m[OK]\e[m wget-mackerel-package success\n"
fi

echo -e "`date` wget-mackerel-package finished\n"
