#
# Cookbook Name:: yum-repo
# templates:default: cent6-chefrepo.repo.erb
#
[base]
name=CentOS-$releasever - Base
baseurl=https://<%= node["yum-repo"]["repo-server"] %>/centos/$releasever/os/$basearch/
gpgcheck=1
sslverify=0
gpgkey=https://<%= node["yum-repo"]["repo-server"] %>/centos/RPM-GPG-KEY-CentOS-6

#released updates
[updates]
name=CentOS-$releasever - Updates
baseurl=https://<%= node["yum-repo"]["repo-server"] %>/centos/$releasever/updates/$basearch/
gpgcheck=1
sslverify=0
gpgkey=https://<%= node["yum-repo"]["repo-server"] %>/centos/RPM-GPG-KEY-CentOS-6

#additional packages that may be useful
[extras]
name=CentOS-$releasever - Extras
baseurl=https://<%= node["yum-repo"]["repo-server"] %>/centos/$releasever/extras/$basearch/
gpgcheck=1
sslverify=0
gpgkey=https://<%= node["yum-repo"]["repo-server"] %>/centos/RPM-GPG-KEY-CentOS-6

#additional packages that extend functionality of existing packages
[centosplus]
name=CentOS-$releasever - Plus
baseurl=https://<%= node["yum-repo"]["repo-server"] %>/centos/$releasever/centosplus/$basearch/
gpgcheck=1
sslverify=0
enabled=0
gpgkey=https://<%= node["yum-repo"]["repo-server"] %>/centos/RPM-GPG-KEY-CentOS-6

#contrib - packages by Centos Users
[contrib]
name=CentOS-$releasever - Contrib
baseurl=https://<%= node["yum-repo"]["repo-server"] %>/centos/$releasever/contrib/$basearch/
gpgcheck=1
sslverify=0
enabled=0
gpgkey=https://<%= node["yum-repo"]["repo-server"] %>/centos/RPM-GPG-KEY-CentOS-6