[base]
name=CentOS-$releasever - Base
baseurl=https://<%= node["yum-repo"]["repo-server"] %>/<%= node["yum-repo"]["cent-repo"] %>/$releasever/os/$basearch/
gpgcheck=1
sslverify=0
gpgkey=https://<%= node["yum-repo"]["repo-server"] %>/<%= node["yum-repo"]["cent-repo"] %>/RPM-GPG-KEY-CentOS-6

#released updates
[updates]
name=CentOS-$releasever - Updates
