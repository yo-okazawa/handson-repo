bash -c '
<%= "export https_proxy=\"#{knife_config[:bootstrap_proxy]}\"" if knife_config[:bootstrap_proxy] -%>

distro=`uname -s`

if test "x$distro" = "xSunOS"; then
  if test -d "/usr/sfw/bin"; then
    PATH=/usr/sfw/bin:$PATH
    export PATH
  fi
fi

exists() {
  if command -v $1 &>/dev/null
  then
    return 0
  else
    return 1
  fi
}

<% if knife_config[:bootstrap_install_command] %>
  <%= knife_config[:bootstrap_install_command] %>
<% else %>

  #<REPO_URL AND chef_server_url SET select>
  <% case @chef_config[:environment] %>
  <% when "cl_dev" then %>
    REPO_URL="http://10.110.42.200/packages/"
    BOOTSTRAP_WGET_OPTION="--no-check-certificate"
    CHEF_SERVER_URL="chef_server_url  \"https://ap01.urasoko.com/organizations/cl_dev\""
#    SSL_VERIFY_MODE="ssl_verify_mode :verify_none"
  <% when "eval" then %>
    REPO_URL="https://198.18.0.15/packages/"
    BOOTSTRAP_WGET_OPTION="--no-check-certificate"
    CHEF_SERVER_URL="chef_server_url \"https://198.18.0.14/organizations/ckkcl\""
    SSL_VERIFY_MODE="ssl_verify_mode :verify_none"
  <% when "imai" then %>
    REPO_URL="https://198.18.0.15/packages/"
    BOOTSTRAP_WGET_OPTION="--no-check-certificate"
    CHEF_SERVER_URL="chef_server_url  \"https://198.18.0.14/organizations/ckkcl\""
    SSL_VERIFY_MODE="ssl_verify_mode :verify_none"
  <% when "oyam" then %>
    REPO_URL="https://198.18.0.15/packages/"
    CHEF_SERVER_URL="chef_server_url  \"https://198.18.0.14/organizations/ckkcl\""
    SSL_VERIFY_MODE="ssl_verify_mode :verify_none"
  <% else %>
    echo "ERR:environment is not specified, use -E <enviroment>"
  <% end %>
  #</REPO_URL AND chef_server_url SET select>
  
  if ! exists /usr/bin/chef-client; then
    CHEF_PACKAGE="chef-12.0.3-1.x86_64.rpm"
    PACKAGE_URL=$REPO_URL$CHEF_PACKAGE
    echo "Installing Chef Client..."
    if exists wget; then
      bash <(wget ${BOOTSTRAP_WGET_OPTION} $PACKAGE_URL -O /tmp/chef-client-package.rpm)
    elif exists curl; then
      bash <(curl $PACKAGE_URL -O /tmp/chef-client-package.rpm)
    else
      echo "Neither wget nor curl found. Please install one and try again." >&2
      exit 1
    fi
  fi

<% end %>

mkdir -p /etc/chef

cat > /etc/chef/validation.pem <<'EOP'
<%= validation_key %>
EOP
chmod 0600 /etc/chef/validation.pem

<% if encrypted_data_bag_secret -%>
cat > /etc/chef/encrypted_data_bag_secret <<'EOP'
<%= encrypted_data_bag_secret %>
EOP
chmod 0600 /etc/chef/encrypted_data_bag_secret
<% end -%>

<% unless trusted_certs.empty? -%>
mkdir -p /etc/chef/trusted_certs
<%= trusted_certs %>
<% end -%>

<%# Generate Ohai Hints -%>
<% unless @chef_config[:knife][:hints].nil? || @chef_config[:knife][:hints].empty? -%>
mkdir -p /etc/chef/ohai/hints

<% @chef_config[:knife][:hints].each do |name, hash| -%>
cat > /etc/chef/ohai/hints/<%= name %>.json <<'EOP'
<%= Chef::JSONCompat.to_json(hash) %>
EOP
<% end -%>
<% end -%>

cat > /etc/chef/client.rb <<'EOP'
<%= config_content %>
EOP
echo ${CHEF_SERVER_URL} >> /etc/chef/client.rb
echo ${SSL_VERIFY_MODE} >> /etc/chef/client.rb

cat > /etc/chef/first-boot.json <<'EOP'
<%= Chef::JSONCompat.to_json(first_boot) %>
EOP

echo "Starting first Chef Client run..."

<%= start_chef %>'